<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.edu.ufra.appfiscalizacao.activity.EstabelecimentoDetalhesActivity">

    <TextView android:text="Nome" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/nomeEstabelecimento" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView android:text="Contato" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/contatoEstabelecimento" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView android:text="Logradouro" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/logradouroEstabelecimento" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView android:text="Bairro" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/bairroEstabelecimento" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView android:text="Telefone" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/telefoneEstabelecimento" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView android:text="Status" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/statusEstabelecimento" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnVistoriar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vistoriar"
        />

    <Button
        android:id="@+id/btnVistorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vistorias Realizadas"
        />
</LinearLayout>
