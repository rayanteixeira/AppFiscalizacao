<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.edu.ufra.appfiscalizacao.activity.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginname"
        android:textColor="@color/nliveo_black"
        android:hint="login"
        android:textColorHint="@color/nliveo_black"
        android:layout_above="@+id/loginPassword"
        android:layout_alignRight="@+id/loginPassword"
        android:layout_alignEnd="@+id/loginPassword"
        android:layout_alignLeft="@+id/loginPassword"
        android:layout_alignStart="@+id/loginPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:textColor="@color/nliveo_black"
        android:hint="password"
        android:textColorHint="@color/nliveo_black"
        android:ems="10"
        android:id="@+id/loginPassword"
        android:layout_marginBottom="68dp"
        android:layout_above="@+id/btnLogin"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_photologo"
        android:layout_above="@+id/space"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="60px"
        android:layout_height="60px"
        android:id="@+id/space"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/loginname"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/btnLogin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp" />

</RelativeLayout>
