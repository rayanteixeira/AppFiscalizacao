<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ufra.appfiscalizacao" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.VolleyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.SobreActivity"
            android:label="@string/app_name"
            android:theme="@style/nLiveoDrawer" />
        <activity
            android:name=".activity.publico.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/nLiveoDrawer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DetalhesTecnicoActivity"
            android:label="@string/title_activity_detalhe" >
        </activity>
        <activity
            android:name=".activity.DetalhesVistoriaActivity"
            android:label="@string/title_activity_estabelecimento_detalhes" >
        </activity>
        <activity
            android:name=".activity.InspecaoActivity"
            android:label="@string/title_activity_vistoria" >
        </activity>
        <activity
            android:name=".activity.VistoriasActivity"
            android:label="@string/title_activity_vistorias" >
        </activity>
    </application>

</manifest>
