<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ufra.appfiscalizacao" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.VolleyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.SobreActivity"
            android:label="@string/app_name"
            android:theme="@style/nLiveoDrawer" />
        <activity
            android:name=".activity.publico.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/nLiveoDrawer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DetalhesTecnicoActivity"
            android:label="@string/title_activity_detalhe" >
        </activity>
        <activity
            android:name=".activity.DetalhesVistoriaActivity"
            android:label="@string/title_activity_estabelecimento_detalhes" >
        </activity>
        <activity
            android:name=".activity.InspecaoActivity"
            android:label="@string/title_activity_vistoria" >
        </activity>
        <activity
            android:name=".activity.VistoriasActivity"
            android:label="@string/title_activity_vistorias" >
        </activity>
        <activity
            android:name=".activity.HistoricoVistoriasActivity"
            android:label="@string/title_activity_vistorias" >
        </activity>

        <receiver android:name=".broadcastreceiver.NetworkChangeReceiver"
            android:exported="true"
            android:enabled="true"
            >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <service android:name=".service.ServiceSincronizarVistoria"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="SERVICEVISTORIA" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </service>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
